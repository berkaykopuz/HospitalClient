@{
    ViewData["Title"] = "Hatalı Giriş";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-eGNn6q0gHbX5JwSI6UWhmkgGFnR2MjIlDzDIYXa8rX9A6sR9XKKQZIUkluLxRo3lg" crossorigin="anonymous">
    <title>@ViewData["Title"]</title>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Login Error</h1>
                <p class="card-text">Hatalı email veya şifre. Aşağıdaki butondan tekrar deneyebilirsiniz.</p>
                <a href="@Url.Action("Login", "Citizen")" class="btn btn-primary">Tekrar Dene</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS ve Popper.js ekleyebilirsiniz (isteğe bağlı) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-gO9S7nDlEzr2B5F5BXWxznbVNC6o6l4Zgy5sKSFTT0FzGqr0ujHF4ceFmsF3Xnq4" crossorigin="anonymous"></script>
</body>
</html>