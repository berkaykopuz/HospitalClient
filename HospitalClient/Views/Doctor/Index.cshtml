@model IEnumerable<Doctor>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var doctor in Model)
            {

                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="https://img.freepik.com/premium-vector/doctor-vector-illustration_488994-153.jpg?w=2000" width="225" height="100%" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">Doktor adı: @doctor.Name</p>
                            <p class="card-text">Doktor bilgileri : @doctor.Email</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Doctor" asp-action="AssignWorkHours" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-secondary">Vardiya Ataması</a>
                                    <a type="btn btn-success" asp-controller="Doctor" asp-action="Detail" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-secondary">Görüntüle</a>
                                    <a type="btn btn-success" asp-controller="Doctor" asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-secondary">Düzenle</a>
                                    <a type="btn btn-success" asp-controller="Doctor" asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-secondary">Sil</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>