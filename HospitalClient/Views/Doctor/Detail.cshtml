@model HospitalClient.ViewModels.DoctorDetailViewModel
<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="https://png.pngtree.com/png-vector/20191130/ourmid/pngtree-doctor-icon-circle-png-image_2055257.jpg" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Doktor Bilgileri</h3>
            <p>Adı Soyadı : @Model.Name</p>
            <p>Email: @Model.Email</p>
            <p>
                Randevular: @foreach(var appointment in Model.Appointments)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="https://png.pngtree.com/png-vector/20191130/ourmid/pngtree-doctor-icon-circle-png-image_2055257.jpg" width="225" height="100%" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">Randevu Tarihi: @appointment.Date</p>
                                <p class="card-text">Hasta : @appointment.Citizen.UserName</p>
                            </div>
                        </div>
                    </div>
                }
            </p>
            <h3 class="my-3">Test</h3>
            <ul>
                <li>test</li>
                <li>test</li>
                <li>test</li>
            </ul>
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Related Doctors</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
