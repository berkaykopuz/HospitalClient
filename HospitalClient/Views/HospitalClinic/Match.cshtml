@model HospitalClient.ViewModels.HospitalClinicViewModel

<form method="post" asp-action="Match">
    
    <div class="form-group">
        <label for="selectedHospital">Hastane Seçin:</label>
        @Html.DropDownListFor(model => model.SelectedHospitalId, new SelectList(Model.Hospitals, "Id", "Name"), "Hastane", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="selectedHospital">Klinik Seçin:</label>
        @Html.DropDownListFor(model => model.SelectedClinicId, new SelectList(Model.Clinics, "Id", "Name"), "Klinik", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Atama Yap</button>
</form>